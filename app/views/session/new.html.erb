<<div class="row">

  <div class="col-md-6 col-sm-8 col-sm-offset-2 col-md-offset-3 center text-center">
    <h2 class="form-signin-heading">Please log in</h2>
    <div class="row ">
      <div class="text-center">
        <% if flash[:error].present? %>
        <p>
          <strong>
            <%= flash[:error] %>
          </strong>
        </p>
        <% end %>
      </div>
    </div>

    <%= form_tag(login_path,{class:"form-signin"}) do %>

    <div class="form-group">

      <%= email_field_tag :email, nil, class: 'form-control text-center', placeholder:'Email address', required:true, autofocus: true %>
    </div>
    <div class="form-group">

      <%= password_field_tag :password, nil, class: 'form-control text-center', placeholder:'password' , required:true%>
    </div>

    <div class="actions">
      <%= button_tag(type:"submit",class: "btn btn-lg btn-block") do %>
      Login
      <% end %>
    </div>
    <% end %>
  </div>

</div>
